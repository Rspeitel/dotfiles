#!/bin/sh

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

case "$(printf "A selected area\\nCurrent window\\nFullscreen\\n" | rofi -dmenu -l 3 -i -p " Screenshot which area?")" in
	"A selected area") maim -s ~/Screenshots/"$(date '+%y%m%d-%H%M-%S').png" ;;
	"Current window") maim -i "$(xdotool getactivewindow)" ~/Screenshots/"$(date '+%y%m%d-%H%M-%S').png" ;;
	"Fullscreen") maim ~/Screenshots/"$(date '+%y%m%d-%H%M-%S').png" ;;
esac

